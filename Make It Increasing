#include<bits/stdc++.h>
using namespace std;
int main()
{


    int t;
    cin>>t;
    while(t--)
    {
       long long int n;
       cin>>n;
       long long int i,a[n];
       for(i =0;i<n;i++){
        cin>>a[i];
       }
       long long int cunt =0;
       bool no = false;
       for(i = n-2;i>=0;i--){
        if(a[i+1]==0){
            no = true;
            break;
        }
        while(a[i]>=a[i+1]){
            cunt++;
            a[i]=a[i]/2;
        }
       }
       if(no)cout<<"-1"<<endl;
       else cout<<cunt<<endl;

    }

}
